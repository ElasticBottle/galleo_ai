{
  "name": "galleo",
  "private": true,
  "workspaces": ["apps/*", "packages/*", "tooling/*"],
  "scripts": {
    "build": "turbo build",
    "changeset": "changeset",
    "changeset:release": "bun run build && changeset publish",
    "clean": "git clean -xdf node_modules .turbo .sst",
    "clean:workspaces": "turbo clean",
    "db:generate": "bun run --filter @galleo/db generate",
    "db:migrate-local": "bun run --filter @galleo/db migrate:local",
    "db:migrate-dev": "bun run --filter @galleo/db migrate:dev",
    "db:migrate-prod": "bun run --filter @galleo/db migrate:prod",
    "db:push-local": "bun run --filter @galleo/db push:local",
    "db:push-dev": "bun run --filter @galleo/db push:dev",
    "db:push-prod": "bun run --filter @galleo/db push:prod",
    "db:studio": "bun run --filter @galleo/db studio",
    "dev": "pnpm with-env-local pnpm sst dev --mode mono",
    "dev:packages": "docker compose up -d && turbo run dev --filter=\"./packages/*\"",
    "deploy:personal": "pnpm with-env-dev sst deploy",
    "deploy:dev": "pnpm with-env-dev sst deploy --stage dev",
    "deploy:prod": "pnpm with-env-prod sst deploy --stage production",
    "env:get": "bun x dotenvx get",
    "env:set": "bun x dotenvx set",
    "env:view": "bun x dotenvx decrypt --stdout",
    "format": "turbo run format --continue",
    "lint": "turbo run lint --continue",
    "new:package": "turbo gen package",
    "postinstall": "bun x sherif@latest",
    "typecheck": "turbo run typecheck --continue",
    "ui:add": "cd ./packages/ui && bun run ui-add && cd ../..",
    "sso": "aws sso login --sso-session=galleo",
    "with-env-local": "dotenvx run -f .env.local  -f .env -f .env.production -- ",
    "with-env-dev": "dotenvx run  -f .env -f .env.production -- ",
    "with-env-prod": "dotenvx run -f .env.production -- "
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.29.5",
    "@dotenvx/dotenvx": "^1.40.0",
    "@galleo/env": "workspace:*",
    "@galleo/typescript": "workspace:*",
    "@turbo/gen": "^2.5.4",
    "sst": "3.14.11",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.8.1"
}
